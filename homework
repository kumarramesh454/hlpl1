#include "std_lib_facilities.h"
int main()
{
 int a, b, c;
double x1, x2;
//ax^2+bx+c=0
cout<<"enter the value of a=";
cin>>a;
cout<<"enter the value of b=";
cin>>b;
cout<<"enter the value of c=";
cin>>c;
cout<<"The quadric equation is"<<a;
cout<<"*x*x+"<<b;
cout<<"*x+"<<c;

if(a==0 && b==0){
cout<<"not a va0lid equation";}
if(a==0 && b!=0)
{
  x1=-(c/b);
  cout<<"root="<<x1;
}
if((b*b+4*a*c)>0)
{
   x2=(b*b)-(4*a*c);
   x1=-b+sqrt(x2);
   cout<<"root="<<x1;
}
if((b*b)-(4*a*c)<0)
{
cout<<"not a real root";
}
return 0;
}
